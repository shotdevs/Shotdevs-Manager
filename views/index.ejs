        </nav>

        <header class="w-full pt-48 pb-24 md:pb-36">
            <div class="container mx-auto px-6 text-center">
                <div class="flex justify-center mb-6 animate-on-scroll">
                    <% if (botLogoUrl) { %>
                        <img src="<%= botLogoUrl %>" alt="Bot Logo" class="w-24 h-24 rounded-full border-4" style="border-color: var(--primary-red);">
                    <% } else { %>
